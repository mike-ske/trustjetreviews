    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Crivion",
            "email": "crivion@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Crivion\\Options\\": "src/"
        }
    },
     "extra": {
        "laravel": {
            "providers": [
                "Crivion\\Options\\OptionsServiceProvider"
            ],
             "aliases": {
                "Options": "Crivion\\Options\\Facade"
            }
        }
    }
}
